#!/to

n="jaq"
v="2.3.0"
r="3"
tag="v$v"
a="Command-line JSON processor"
m="Tox"
l="MIT"
t="utils lang cli"
u="https://github.com/01mf02/$n.git"

s="$u"
d=(
    "gcc"
    "glibc"
    "b,rust"
)

b() {

# We're not interested in the jaq playground
rm -rf "$n-play"
sed -i "/$n-play/d" Cargo.toml

CFLAGS+=" -ffat-lto-objects"
cbr

install -vDm755 "target/release/$n" -t "$D/usr/bin/"
ln -sv "$n" "$D/usr/bin/jq"

}

t() {

cargo test

}
