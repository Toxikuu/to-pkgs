#!/to

n="btrfs-progs"
v="6.14"
tag="v$v"
a="Btrfs filesystem utilities"
m="Tox"
l="GPL-2.0-only"
t="lib utils fs cli"
u="https://github.com/kdave/$n.git"

s="$u"
d=(
    "glibc"
    "lzo"
    "util-linux"
    "zlib"
    "zstd"
    "udev"
    "b,e2fsprogs"
    "b,grep" # tests
)

kcfg=(
    "BTRFS_FS=*/m"
    "BTRFS_FS_POSIX_ACL=*"

    "BTRFS_FS_RUN_SANITY_TESTS=n"
    "BTRFS_DEBUG=n"
    "BTRFS_ASSERT=n"
    "BTRFS_FS_REF_VERIFY=n"
)

b() {

autoreconf -fiv
_cfg=( --disable-documentation )
def

}

