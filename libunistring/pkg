#!/to

n="libunistring"
v="1.3"
a="Library for manipulating Unicode strings"
m="Tox"
l=(
    "GPL-2.0-or-later"
    "LGPL-3.0-or-later"
)
t="lib"
u="https://git.savannah.gnu.org/git/$n.git"

s=(
    "https://ftp.gnu.org/gnu/$n/$n-$v.tar.xz"
)

d=(
    "glibc" # actually needed
)

b() {

cfg
mk
mi

}

t() {

# Check existing locales because I'm curious
locale -a > /LOCALES

# Generate locales needed for tests
localedef -i ja_JP -f UTF-8 ja_JP.UTF-8
localedef -i fr_FR -f UTF-8 fr_FR.UTF-8

mk check

}
