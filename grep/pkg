#!/to

n="grep"
v="3.12"
a="String search utility"
m="Tox"
l="GPL-3.0"
t="core utils cli"
u="https://https.git.savannah.gnu.org/git/$n.git"

s=(
    "https://ftp.gnu.org/gnu/$n/$n-$v.tar.xz"
)

d=(
    "glibc"
    "pcre2"
    "b,gperf"
)

b() {

# Remove a warning about deprecated grep symlinks that cause some test failures
# for other packages
sed "s/echo/#echo/" -i src/egrep.sh

cfg
mk
mi

}

t() {

mk check

}
