#!/to

n="shadow"
v="4.17.4"
a="Secure password handling"
m="Tox"
l="BSD-3-Clause"
t="core sec lib"
u="https://github.com/$n-maint/$n.git"
vf="gr | grep '^[0-9]\+\\.[0-9]' | sort -V"

s=(
    "${u%.git}/releases/download/$v/$n-$v.tar.xz"
)

d=(
    "libxcrypt"
    "linux-pam"
    "acl"
    "attr"
    "glibc"
)

b() {

sed -i 's/groups$(EXEEXT) //' src/Makefile.in

find man -name Makefile.in -exec sed -i 's/groups\.1 / /'   {} \;
find man -name Makefile.in -exec sed -i 's/getspnam\.3 / /' {} \;
find man -name Makefile.in -exec sed -i 's/passwd\.5 / /'   {} \;

sed -e 's@#ENCRYPT_METHOD DES@ENCRYPT_METHOD YESCRYPT@' \
    -e 's@/var/spool/mail@/var/mail@'                   \
    -e '/PATH=/{s@/sbin:@@;s@/bin:@@}'                  \
    -i etc/login.defs

_cfg=(
    --{exec-,}prefix=/usr
    --{s,}bindir=/usr/bin

    --without-libbsd    # beyond scope
    --without-selinux   # beyond scope
    --without-nscd      # nscd is dead

    --with-{b,yes}crypt
    --with-su
    --with-libpam
    --with-group-name-max-length=32
)

cfg
sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

mk
mi exec_prefix=/usr pamdir=

# Install man pages
mk DESTDIR="$D" -C man install-man

# Don't use shadow's /etc/pam.d files since we create our own
rm -vf "$D/etc/pam.d/"* || true

# Install configuration files
install -vDm644 "$D"/etc/login.defs "$D"/etc/login.defs.orig

for FUNCTION in FAIL_DELAY               \
                FAILLOG_ENAB             \
                LASTLOG_ENAB             \
                MAIL_CHECK_ENAB          \
                OBSCURE_CHECKS_ENAB      \
                PORTTIME_CHECKS_ENAB     \
                QUOTAS_ENAB              \
                CONSOLE MOTD_FILE        \
                FTMP_FILE NOLOGINS_FILE  \
                ENV_HZ PASS_MIN_LEN      \
                SU_WHEEL_ONLY            \
                PASS_CHANGE_TRIES        \
                PASS_ALWAYS_WARN         \
                CHFN_AUTH ENCRYPT_METHOD \
                ENVIRON_FILE
do
    sed -i "s/^${FUNCTION}/# &/" "$D"/etc/login.defs
done

install -vDm644 "$A"/* -t "$D"/etc/pam.d/

for PROGRAM in chfn chgpasswd chsh groupadd groupdel \
               groupmems groupmod useradd userdel usermod
do
    install -vDm644 "$D/etc/pam.d/chage" "$D/etc/pam.d/$PROGRAM"
    sed -i "s/chage/$PROGRAM/" "$D/etc/pam.d/$PROGRAM"
done

# Shadow fucking ignores --sbindir ???
mv -vf "$D/usr/sbin"/* "$D/usr/bin/"
rmdir -v "$D/usr/sbin"

}

i() {

pwconv
grpconv

mkdir -p /etc/default
useradd -D --gid 999

sed -i '/MAIL/s/yes/no/' /etc/default/useradd

for f in login.access limits; do
    if [ -f "/etc/$f" ]; then
        rm -vf "/etc/$f"
    fi
done

}
