#!/to

n="dbus"
v="1.16.2"
a="Message bus system"
m="Tox"
l=(
    "AFL-2.1 OR GPL-2.0-or-later"
    "MIT"
    "GPL"
)
t="core utils lib"
u="https://gitlab.freedesktop.org/$n/$n.git"
vf="gr | grep -E '$n-[0-9]' | sort -V"

s=(
    "https://$n.freedesktop.org/releases/$n/$n-$v.tar.xz"
)

d=(
    "meson"
    "ninja"
    "expat"
    "glibc"
)

b() {

with mn

_cfg=(
    -D doxygen_docs=disabled
    -D valgrind=disabled
    -D xml_docs=disabled
    -D qt_help=disabled
    -D selinux=disabled
    -D systemd=disabled
    -D tools=true
)

def

# Install bootscript
install -vDm754 "$A/dbus-bootscript" "$D/etc/init.d/dbus"

}

posti() {

# Fix permissions
chown -v root:messagebus /usr/libexec/dbus-daemon-launch-helper
chmod -v      4750       /usr/libexec/dbus-daemon-launch-helper

}

t() {

# Many tests are disabled because of missing packages
nj test

}
