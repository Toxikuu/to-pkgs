#!/to

n="feh"
v="565bc67087513d0c2bdf7256b2ad53dc69812f66"
r="1"
a="Fast, light image viewer"
m="Tox"
l="MIT"
t="img gui utils"
u="https://github.com/derf/$n.git"

s="$u"

d=(
    "curl"
    "file"
    "imlib2"
    "libexif"
    "libxinerama"
    "b,libxt"

    # Optional runtime:
    # "r,imagemagick"
    # "r,libjpeg-turbo"
)

b() {

_cfg=(
    VERSION="${v:8}"
    exif=1
    inotify=1
    xinerama=1
    magic=1
    help=1
    stat64=1 # perf
    curl=1
    debug=0
)

mk PREFIX=/usr "${_cfg[@]}"
mi PREFIX=/usr

}
