#!/to

n="wget"
v="2.2.0"
an="$n${v:0:1}" # wget2
a="Network utility to retrieve files from the web"
m="Tox"
l="GPL-3.0-or-later"
t="net lib utils"
u="https://gitlab.com/gnu$n/$an.git"
vf="gr | grep v | tail -n1 | cut -d/ -f3"

s=(
    "https://gnu$n.gitlab.io/$an/$an-latest.tar.gz"
)

d=(
    "glibc"
    "zlib"
    "libidn2"
    "libpsl"
    "pcre2"
    "r,make-ca"
    "b,gperf"
)

b() {

_cfg=(
    --with-lzma
    --with-bzip2
    --with-gnu-ld

    --without-lzip
    --without-brotlidec
    --without-plugin-support

    --disable-doc
    --disable-fuzzing

    --enable-threads=posix
    --enable-year2038
)

def

ln -sfv "$an" "$D/usr/bin/$n"
rm -vf "$D/usr/bin/${an}_noinstall" # delete a useless testing binary

}
