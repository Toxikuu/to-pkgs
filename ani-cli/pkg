a="Utility to browse and play anime"
m="Tox"
l="GPL-3.0"
t="utils cli video"
u="https://github.com/pystardust/$n.git"

s="$u"
d=(
    "r,aria2"
    "r,curl"
    "r,ffmpeg"
    "r,fzf"
    "r,grep"
    "r,mpv"
    "r,sed"
)

b() {

