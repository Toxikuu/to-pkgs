#!/to

n="zstd"
v="1.5.7"
a="The Zstandard compression algorithm"
m="Tox"
l=(
    "BSD-3-Clause"
    "GPL-2.0-only"
)
t="core critical utils cli lib z"
u="https://github.com/facebook/$n.git"

s=(
    "${u%.git}/releases/download/v$v/$n-$v.tar.gz"
)

d=(
    "lz4"
    "xz"
    "zlib"
)

b() {

mk prefix=/usr
mi prefix=/usr

rm -vf "$D"/usr/lib/libzstd.a

}

t() {

    mk check

}
