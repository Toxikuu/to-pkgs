mesa-utils@fc8d12981b4b3e0d3415eb48b07ce55da4de0989-1

a="Essential Mesa utilities"
m="Tox"
l="MIT"
t="gfx utils lib gui cli"
u="https://gitlab.freedesktop.org/mesa/demos.git"

s="$u"

d=(
    "libdrm"
    "libx11"
    "libxcb"
    "libxkbcommon"
    "vulkan-loader"
    "wayland"
    "wayland-protocols"
    "libglvnd"
    "libdecor"
    "b,glu"
    "b,glslang"
    "b,freeglut"
    "b,meson"
    "b,samu"
    "b,vulkan-headers"
)

b() {

with meson # TODO: Make the `with` guess matching less shit

_cfg=(
    -D gles1=disabled
    -D osmesa=disabled
    -D glvnd=enabled
    -D libdrm=enabled
    -D x11=enabled
    -D wayland=enabled
    -D vulkan=enabled
    -D with-system-data-files=true
    --wrap-mode=nofallback
)

def

install -vDm755 \
    src/xdemos/{glxinfo,glxgears}   \
    src/vulkan/vkgears              \
    -t "$D/usr/bin/"

}
