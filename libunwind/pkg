#!/to

n="libunwind"
v="1.8.1"
a="Library to determine and manipulate a program's call-chain"
m="Tox"
l="MIT"
t="lib"
u="https://github.com/$n/$n.git"

s=(
    "$u"
    "https://glfs-book.github.io/glfs/patches/$n/$n-$v-fix_malloc.patch"
)

d=(
    "b,git"
    "xz"
    "zlib"
    "glibc"
)

b() {

# The v1.8.1 tag isn't included in the shallow clone, so it must be fetched
git fetch origin tag v1.8.1
gco v$v

pat "../$n-$v-fix_malloc.patch"
autoreconf -fiv

def
il

}

t() {

mk check

}
