#!/to

n="libunwind"
v="1.8.2"
tag="v$v"
a="Library to determine and manipulate a program's call-chain"
m="Tox"
l="MIT"
t="lib"
u="https://github.com/$n/$n.git"

s="$u"

d=(
    "xz"
    "zlib"
    "glibc"
)

b() {

autoreconf -fiv

# Fix a gcc >= 15 build problem
sed -i '/func.s/s/s//' tests/Gtest-nomalloc.c

cfg
sed -i 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

mk
mi

}

t() {

mk check

}
