#!/to

n="libarchive"
v="3.8.1"
a="Multi-format archive and compression library"
m="Tox"
l="BSD-2-Clause"
t="lib utils core"
u="https://github.com/$n/$n.git"

s=(
    "${u%.git}/releases/download/v$v/$n-$v.tar.xz"
)

d=(
    "acl"
    "bzip2"
    "glibc"
    "lz4"
    "xz"
    "zlib"
    "zstd"
    "expat"
    "openssl"
)

b() {

def

# Avoid relying on the unmaintained Unzip package
ln -sv bsdunzip "$D/usr/bin/unzip"

}

t() {

mk check

}
